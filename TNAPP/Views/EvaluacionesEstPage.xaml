<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TNAPP.Views.EvaluacionesEstPage"
             Title="EvaluacionesEstPage"
             NavigationPage.HasNavigationBar="False">
    
    <VerticalStackLayout Padding="20">
        <Label Text="Evaluaciones" FontSize="24" HorizontalOptions="Center" />

        <ListView x:Name="evaluacionesListView" Margin="0,10,0,10" ItemTapped="OnEvaluacionSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="10">
                            <Label Text="{Binding Nombre}" FontAttributes="Bold" FontSize="18" />
                            <Label Text="{Binding Fecha}" FontSize="14" />
                            <Label Text="{Binding TipoEvaluacion}" FontSize="14" />
                            <Label Text="{Binding CalificacionMaxima}" FontSize="14" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
    
</ContentPage>